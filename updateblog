# /bin/bash

echo "Converting from Markdown to HTML"

for file in *.md; do
	if [ -f $file ]
	then
        echo "    $file"
        newEjsFile=$(echo $file | sed 's/.md/.ejs/')
		pandoc -f markdown -t html5 $file -o $newEjsFile
		mv $newEjsFile ~/blog/blog/views/partials/posts
	else
        echo "No .md files found"
    fi
done

echo "done"
